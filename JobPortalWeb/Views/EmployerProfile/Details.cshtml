@model JobPortalWeb.Models.EmployerProfile

@{
    ViewData["Title"] = "پروفایل کارفرما";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
            <div class="row">
                <!-- سمت چپ: لوگو یا تصویر -->
                <div class="col-md-4 text-center border-end">
                    <img src="https://via.placeholder.com/200x200?text=Company+Logo"
                         class="rounded-circle shadow-sm mb-3"
                         style="width: 200px; height: 200px; object-fit: cover;"
                         alt="لوگوی شرکت" />

                    <h4 class="mt-3">@Model.CompanyName</h4>
                    <p class="text-muted">@Model.Location</p>
                </div>

                <!-- سمت راست: جزئیات -->
                <div class="col-md-8 ps-4">
                    <h5 class="mb-3 text-primary">اطلاعات شرکت</h5>

                    <p>
                        <strong>نام شرکت:</strong>
                        <span class="ms-2">@Model.CompanyName</span>
                    </p>

                    <p>
                        <strong>ایمیل:</strong>
                        <span class="ms-2">@Model.User?.Email</span>
                    </p>

                    <p>
                        <strong>وبسایت:</strong>
                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <a href="@Model.Website" target="_blank" class="ms-2">@Model.Website</a>
                        }
                        else
                        {
                            <span class="text-muted ms-2">ثبت نشده</span>
                        }
                    </p>

                    <h5 class="mt-4 text-primary">درباره شرکت</h5>
                    <p class="bg-light p-3 rounded">
                        @if (!string.IsNullOrEmpty(Model.CompanyDescription))
                        {
                            @Model.CompanyDescription
                        }
                        else
                        {
                            <span class="text-muted">توضیحاتی وارد نشده است.</span>
                        }
                    </p>

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            بازگشت
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
